  "flow": {
    "triggers": [
      {
        "id": "switched",
        "title": {
          "en": "Switched"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=plug"
          }
        ]
      },
      {
        "id": "double_tap",
        "title": {
          "en": "Cube double tapped"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
